@model CreateRoleViewModel

@{
    ViewBag.Title = localizer["Add Role"];
    var dir = System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft ? "rtl" : "ltr";
}
<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12">
        <h1>@localizer["Create Role"]</h1>
        <hr />
        <form asp-action="CreateRole" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="warp-input">
                <label asp-for="RoleName" class="form-label">@localizer["Role Name"]</label>
                <input asp-for="RoleName" class="input" placeholder="@localizer["Name"] ... " />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-main btn-primaryy">@localizer["Add"]</button>
            <a asp-action="ListRoles" class="btn-main btn-ignor">@localizer["Back"]</a>
        </form>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12">
        <div class="h-75 w-75 float-end">
            <img src="~/img/Process-bro.svg">
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}